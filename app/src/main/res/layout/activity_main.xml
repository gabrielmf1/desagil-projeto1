<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:gravity="center"
        android:text="Menu" />

    <Button android:id="@+id/tradutor_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="25sp"
        android:layout_marginTop="160dp"
        android:background="@drawable/retangulo"
        android:textColor="#FFFFFF"
        android:text="Tradutor" />

    <Button android:id="@+id/texts_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/retangulo"
        android:textColor="#FFFFFF"
        android:text="Mensagens Rápidas" />

    <Button android:id="@+id/dic5_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/retangulo"
        android:textColor="#FFFFFF"
        android:text="Dicionário Morse-Romano" />

    <Button android:id="@+id/sms"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/retangulo"
        android:textColor="#FFFFFF"
        android:text="SMS" />

</LinearLayout>
